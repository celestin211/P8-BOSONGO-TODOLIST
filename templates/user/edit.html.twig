        <h1>Modifier un utilisateur</h1>
    </div>
{% endblock %}

{% block header_img %}{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
            {{form_row(form.username)}}
            {{form_row(form.password)}}
            {{form_row(form.email)}}
            {{form_row(form.roles)}}
            <div class="text-right">
                <button type="submit" class="btn btn-success">Modifier</button>
            </div>
        {{ form_end(form) }}
